{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist/server",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@configs/*": ["./configs/*"]
    }
  },
  "include": ["server", "shared"],
  "exclude": ["node_modules", "dist", "archive", "tmp", ".aiconfig"]
}
