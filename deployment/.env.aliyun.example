# 阿里云镜像部署环境变量配置

# 应用配置
NODE_ENV=production
PORT=3000

# 镜像标签配置
IMAGE_TAG=latest
# 可选的标签:
# - latest: 最新版本
# - master: master 分支版本
# - d42144a: 特定提交版本
# - 或使用 GitHub Actions 推送的其他标签

# 数据库配置 (如果需要)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=auto_test
DB_USER=root
DB_PASSWORD=your_password

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# API 配置
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# 安全配置
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# CORS 配置
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true
