# 开发环境配置
# 用于本地开发和调试

# ================================
# 应用基础配置
# ================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ================================
# 数据库配置
# ================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=automation_platform_dev
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000

# ================================
# Redis 配置
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_TTL=600

# ================================
# JWT 认证配置
# ================================
JWT_SECRET=dev_jwt_secret_for_development_only
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# Jenkins 集成配置
# ================================
JENKINS_URL=http://localhost:8080
JENKINS_USER=dev_user
JENKINS_API_TOKEN=dev_jenkins_token
JENKINS_JOB_NAME=automation-test-execution-dev
JENKINS_API_KEY=dev_platform_api_key
JENKINS_JWT_SECRET=dev_jenkins_jwt_secret
JENKINS_SIGNATURE_SECRET=dev_jenkins_signature_secret

# ================================
# 邮件通知配置（使用 MailHog）
# ================================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
MAIL_FROM=dev@localhost

# ================================
# 文件上传配置
# ================================
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,txt,csv,png,jpg,jpeg
UPLOAD_PATH=./uploads

# ================================
# 日志配置
# ================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=3
LOG_DATE_PATTERN=YYYY-MM-DD

# ================================
# 安全配置
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
SESSION_SECRET=dev_session_secret
BCRYPT_ROUNDS=8

# ================================
# 性能配置
# ================================
CACHE_TTL=60
API_TIMEOUT=10000
DB_QUERY_TIMEOUT=5000
MAX_CONCURRENT_EXECUTIONS=3

# ================================
# 监控配置
# ================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60000
PROMETHEUS_ENABLED=false

# ================================
# 备份配置
# ================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 4 * * *
BACKUP_RETENTION_DAYS=3
BACKUP_PATH=./backups

# ================================
# 功能开关
# ================================
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_AUDIT_LOG=true
ENABLE_API_DOCS=true

# ================================
# 第三方服务配置（开发环境不使用）
# ================================
# 钉钉通知
DINGTALK_WEBHOOK_URL=
DINGTALK_SECRET=

# 企业微信通知
WECHAT_WEBHOOK_URL=

# Slack 通知
SLACK_WEBHOOK_URL=

# ================================
# Docker 相关配置
# ================================
DOCKER_REGISTRY=localhost:5000
APP_NAME=automation-platform
BUILD_VERSION=dev-latest
COMPOSE_PROJECT_NAME=automation-platform-dev

# ================================
# SSL/TLS 配置
# ================================
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_PROTOCOLS=

# ================================
# 高可用配置
# ================================
CLUSTER_ENABLED=false
CLUSTER_NODES=
LOAD_BALANCER_URL=

# ================================
# 数据同步配置
# ================================
SYNC_ENABLED=false
SYNC_INTERVAL=300000
SYNC_BATCH_SIZE=100
REMOTE_API_URL=
REMOTE_API_KEY=

# ================================
# 错误追踪配置
# ================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=dev-1.0.0

# ================================
# 国际化配置
# ================================
DEFAULT_LOCALE=zh-CN
SUPPORTED_LOCALES=zh-CN,en-US
TIMEZONE=Asia/Shanghai

# ================================
# 开发工具配置（开发环境全部启用）
# ================================
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_ADMIN_PANEL=true

# ================================
# 开发特有配置
# ================================
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_MOCK_DATA=true
ENABLE_DEV_TOOLS=true
DISABLE_CACHE=true

# ================================
# 测试相关配置
# ================================
ENABLE_PERFORMANCE_TESTING=false
ENABLE_LOAD_TESTING=false
TEST_DATA_GENERATION=true
MOCK_EXTERNAL_SERVICES=true

# ================================
# 数据库种子数据
# ================================
ENABLE_SEED_DATA=true
SEED_ADMIN_EMAIL=admin@localhost
SEED_ADMIN_PASSWORD=admin123

# ================================
# 开发服务器配置
# ================================
VITE_DEV_PORT=5173
VITE_API_PROXY=http://localhost:3000