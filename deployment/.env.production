# 生产环境配置
# 请根据实际情况修改以下配置

# ================================
# 应用基础配置
# ================================
NODE_ENV=production
PORT=3000
APP_URL=https://automation-platform.example.com

# ================================
# 数据库配置
# ================================
DB_HOST=your-production-db-host.com
DB_PORT=3306
DB_NAME=automation_platform
DB_USER=automation_user
DB_PASSWORD=your_secure_db_password
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=60000

# ================================
# Redis 配置
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0
REDIS_TTL=3600

# ================================
# JWT 认证配置
# ================================
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# Jenkins 集成配置
# ================================
JENKINS_URL=https://your-jenkins.example.com
JENKINS_USER=automation_user
JENKINS_API_TOKEN=your_jenkins_api_token
JENKINS_JOB_NAME=automation-test-execution
JENKINS_API_KEY=your_platform_api_key_for_jenkins_callback
JENKINS_JWT_SECRET=your_jenkins_jwt_secret_for_callback
JENKINS_SIGNATURE_SECRET=your_jenkins_signature_secret_for_callback

# ================================
# 邮件通知配置
# ================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=noreply@example.com
MAIL_PASS=your_mail_password
MAIL_FROM=noreply@example.com

# ================================
# 文件上传配置
# ================================
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,txt,csv
UPLOAD_PATH=/opt/automation-platform/uploads

# ================================
# 日志配置
# ================================
LOG_LEVEL=info
LOG_FILE_PATH=/opt/automation-platform/logs
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_DATE_PATTERN=YYYY-MM-DD

# ================================
# 安全配置
# ================================
CORS_ORIGINS=https://automation-platform.example.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
SESSION_SECRET=your_session_secret_key
BCRYPT_ROUNDS=12

# ================================
# 性能配置
# ================================
CACHE_TTL=300
API_TIMEOUT=30000
DB_QUERY_TIMEOUT=5000
MAX_CONCURRENT_EXECUTIONS=10

# ================================
# 监控配置
# ================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_ENABLED=true

# ================================
# 备份配置
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/automation-platform/backups

# ================================
# 功能开关
# ================================
ENABLE_USER_REGISTRATION=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_AUDIT_LOG=true
ENABLE_API_DOCS=false

# ================================
# 第三方服务配置
# ================================
# 钉钉通知
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=your_token
DINGTALK_SECRET=your_dingtalk_secret

# 企业微信通知
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key

# Slack 通知
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# ================================
# Docker 相关配置
# ================================
DOCKER_REGISTRY=your-registry.example.com
APP_NAME=automation-platform
BUILD_VERSION=latest
COMPOSE_PROJECT_NAME=automation-platform-prod

# ================================
# SSL/TLS 配置
# ================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/certs/automation-platform.crt
SSL_KEY_PATH=/etc/nginx/certs/automation-platform.key
SSL_PROTOCOLS=TLSv1.2 TLSv1.3

# ================================
# 高可用配置
# ================================
CLUSTER_ENABLED=false
CLUSTER_NODES=node1.example.com,node2.example.com,node3.example.com
LOAD_BALANCER_URL=https://lb.automation-platform.example.com

# ================================
# 数据同步配置
# ================================
SYNC_ENABLED=true
SYNC_INTERVAL=300000
SYNC_BATCH_SIZE=1000
REMOTE_API_URL=https://api.example.com
REMOTE_API_KEY=your_remote_api_key

# ================================
# 错误追踪配置
# ================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# ================================
# 国际化配置
# ================================
DEFAULT_LOCALE=zh-CN
SUPPORTED_LOCALES=zh-CN,en-US
TIMEZONE=Asia/Shanghai

# ================================
# 开发工具配置（生产环境应禁用）
# ================================
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_ADMIN_PANEL=false